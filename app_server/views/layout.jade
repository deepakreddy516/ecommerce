doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css', integrity='sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ775/zrZ6htclxOk36E5RciOjHB6ywQ/9B6', crossorigin='anonymous')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap')
    style.
      body {
        font-family: 'Poppins', sans-serif;
        background-color: #f7f6f2;
        color: #333;
      }
      h1, h2, h3, h4 {
        font-weight: 600;
      }
      .navbar {
        background-color: #faf3e0;
      }
      .navbar-nav {
        flex-direction: column !important; /* Arrange navbar links in a single column */
      }
      .navbar-nav .nav-link {
        color: #333;
        font-weight: 500;
        padding: 10px 0; /* Adds space between links */
      }
      .nav-link.active {
        color: #f28b82;
      }
      .navbar-brand {
        color: #ffab91;
        font-weight: bold;
      }
      .content {
        padding-bottom: 50px; /* Ensure enough space before footer */
      }
      footer {
        background-color: #ffab91;
      }
      footer a {
        color: #fff;
      }
      .promo-container {
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;
      }
      /* Square Cards */
      .promo {
        width: 250px;
        height: 300px;
        margin-bottom: 20px;
        border: 1px solid #ddd;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        background-color: #fff;
      }
      .promo img {
        width: 100%;
        height: 150px;
        object-fit: cover;
        border-radius: 15px 15px 0 0;
      }
      .promo p {
        padding: 10px 0;
        font-size: 14px;
      }
      .footer {
        margin-top: 50px; /* Add margin to prevent overlap */
      }


  body
